#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  ./bin/rails db:prepare
  
  # Upload resume if file exists (optional - won't fail if missing)
  if [ -f "storage/resume.pdf" ]; then
    echo "Resume file found, uploading..."
    ./bin/rails resume:load || echo "Warning: Resume upload failed, continuing..."
  else
    echo "No resume file found at storage/resume.pdf, skipping upload"
  fi
fi

exec "${@}"
